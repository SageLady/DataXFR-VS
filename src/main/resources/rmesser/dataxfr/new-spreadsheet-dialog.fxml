<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="rmesser.dataxfr.NewSpreadsheetDialogController"
            stylesheets="@CSS/styles.css"
            prefHeight="600.0" prefWidth="600.0">
<!--<headerText>
