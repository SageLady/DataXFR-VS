</headerText>-->
<content>
    <GridPane fx:id="gridPane" hgap="10" vgap="10">
        <HBox  id="HBOX_Border"  GridPane.rowIndex="0" GridPane.columnIndex="0">
            <padding>
                <Insets left="5" />
            </padding>
            <Label style="-fx-font-weight: bold; -fx-text-fill: black;" text="1. " >
                <HBox.margin>
                    <Insets top="10.0" />
                </HBox.margin>
            </Label>
            <Button text="Set Path" minWidth="25"  GridPane.rowIndex="0" GridPane.columnIndex="0"
                    fx:id="directoryButton"  onAction="#directoryButtonHandleClick" >
                <graphic>
                    <ImageView>
                        <Image url="@Images/Open24.gif"/>
                    </ImageView>
                </graphic>
                <HBox.margin>
                    <Insets right ="5.0" />
                </HBox.margin>
            </Button>
            <Label style="-fx-font-weight: bold; -fx-text-fill: black;"
                   text="Traverse to directory where file located and select Open button                     " >
            <HBox.margin>
                <Insets top="10.0" />
            </HBox.margin>
            </Label>
        </HBox>
        <HBox GridPane.rowIndex="1" GridPane.columnIndex="0">
            <padding>
                <Insets left="5" top="5" />
            </padding>
            <Label text="Path: "   />
            <TextField  fx:id="path" minWidth="500" />
        </HBox>
        <HBox GridPane.rowIndex="2" GridPane.columnIndex="0">
            <padding>
                <Insets left="5" top="5" />
            </padding>
            <Label text="Filename:  "  />
            <TextField  fx:id="filename" minWidth="450" />
        </HBox>
        <HBox  id="HBOX_Border" fx:id="HBOX_Load"
               GridPane.rowIndex="3" GridPane.columnIndex="0">
            <padding>
                <Insets left="5" />
            </padding>
            <Label style="-fx-font-weight: bold; -fx-text-fill: black;" text="2. " >
                <HBox.margin>
                    <Insets top="10.0" />
                </HBox.margin>
            </Label>
            <Button text="Load" minWidth="25"
                    fx:id="loadButton"  onAction="#loadButtonHandleClick" >
                <graphic>
                    <ImageView>
                        <Image url="@Images/Open24.gif"/>
                    </ImageView>
                </graphic>
                <HBox.margin>
                    <Insets right ="5.0" />
                </HBox.margin>
            </Button>
            <Label style="-fx-font-weight: bold; -fx-text-fill: black;" fx:id="loadInstructions"
                   text="Select Load button to finish record details                     " >
                <HBox.margin>
                    <Insets top="10.0" />
                </HBox.margin>
            </Label>
            <ProgressBar fx:id="progressBar" visible="false" prefWidth="125.0" progress="0.0">
                <HBox.margin>
                    <Insets left="2.0" right="10.0" top="10.0" />
                </HBox.margin>
            </ProgressBar>
        </HBox>
        <HBox fx:id="HBOX_Owner"  GridPane.rowIndex="5" GridPane.columnIndex="0">
            <padding>
                <Insets left="5" top="5" />
            </padding>
            <Label fx:id="ownerLabel"  text="Owner:  "  />
            <ComboBox  fx:id="ownerComboBox" minWidth="250" />
        </HBox>
